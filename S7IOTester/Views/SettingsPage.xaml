<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodels="clr-namespace:S7IOTester.ViewModels"
             x:Class="S7IOTester.Views.SettingsPage"
             BackgroundColor="#F3E9DD">
    
    <ContentPage.BindingContext>
        <viewmodels:SettingsViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content >
        
        <StackLayout VerticalOptions="Center" >
            
            <StackLayout>
                <Label 
                    Text="CPU Family"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    TextColor="Black"
                    HorizontalOptions="Center"
                />

                <Picker 
                    Title="Select CPU Family"
                    ItemsSource="{Binding CPUFamily}"
                    SelectedItem="{Binding CPUType}"
                    TitleColor="black"
                    TextColor="Black"
                    HorizontalOptions="Center"
                />

            </StackLayout>
            
            <StackLayout>
                <Label 
                    Text="IP Address"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    TextColor="Black"
                    HorizontalOptions="Center"
                />

                <Entry 
                    Placeholder="Set device IP Address"
                    Text="{Binding IPAddress, Mode=TwoWay}"                  
                    TextColor="Black" 
                    PlaceholderColor="black"
                    HorizontalOptions="CenterAndExpand"
                    
                />

                <Label 
                    Text="CPU Name"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    TextColor="Black"
                    HorizontalOptions="Center"
                />

                <Entry 
                    Placeholder="Set CPU name"
                    Text="{Binding CPUName, Mode=TwoWay}"                  
                    TextColor="Black" 
                    PlaceholderColor="black"
                    HorizontalOptions="CenterAndExpand"
                    
                />

                <Button 
                    Text="Save"
                    Command="{Binding SaveSettings}"
                    HorizontalOptions="Center"
                />
            </StackLayout>
            
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>