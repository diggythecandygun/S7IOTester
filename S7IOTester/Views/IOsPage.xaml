                    HorizontalOptions="StartAndExpand"                  
                    />
                
                <!--Activated-->

                <Ellipse
                    Grid.Column="2"
                    Grid.Row="1"
                    Fill="green"
                    IsVisible="{Binding X0}"
                    WidthRequest="30"
                    HeightRequest="25"
                    HorizontalOptions="StartAndExpand"                  
                    />

                <Ellipse
                    Grid.Column="2"
                    Grid.Row="2"
                    Fill="green"
