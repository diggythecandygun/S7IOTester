                    HorizontalOptions="StartAndExpand"                  
                    />

                <Ellipse
                    Grid.Column="2"
                    Grid.Row="3"
                    Fill="green"
                    IsVisible="{Binding X2}"
                    WidthRequest="30"
                    HeightRequest="25"
                    HorizontalOptions="StartAndExpand"                  
                    />

                <Ellipse
                    Grid.Column="2"
                    Grid.Row="4"
                    Fill="green"
                    IsVisible="{Binding X3}"
                    WidthRequest="30"
                    HeightRequest="25"
                    HorizontalOptions="StartAndExpand"                  
                    />

                <Ellipse
                    Grid.Column="2"
                    Grid.Row="5"
                    Fill="green"
                    IsVisible="{Binding X4}"
                    WidthRequest="30"
                    HeightRequest="25"
                    HorizontalOptions="StartAndExpand"                  
                    />
                <Ellipse
                    Grid.Column="2"
                    Grid.Row="6"
                    Fill="green"
                    IsVisible="{Binding X5}"
                    WidthRequest="30"
                    HeightRequest="25"
