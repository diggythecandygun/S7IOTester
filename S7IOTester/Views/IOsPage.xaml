                    IsVisible="{Binding X7}"
                    WidthRequest="30"
                    HeightRequest="25"
                    HorizontalOptions="StartAndExpand"                  
                    />
               


            </Grid>




        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>